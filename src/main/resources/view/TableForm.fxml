<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="478.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TableFormController">
   <children>
      <TableView fx:id="tblCustomers" layoutX="130.0" layoutY="218.0" prefHeight="200.0" prefWidth="383.0">
        <columns>
          <TableColumn prefWidth="75.0" text="ID" />
          <TableColumn prefWidth="188.0" text="Name" />
            <TableColumn prefWidth="112.0" text="Address" />
        </columns>
      </TableView>
      <VBox layoutX="14.0" layoutY="30.0" prefHeight="102.0" prefWidth="187.0">
         <children>
            <Label text="Customer ID :" />
            <TextField fx:id="txtID" prefHeight="0.0" prefWidth="175.0" promptText="Ex: c001" />
            <Label text="Customer Name :" />
            <TextField fx:id="txtName" promptText="Ex Tharindu" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" promptText="Ex: Panadura" />
         </children>
      </VBox>
      <Button fx:id="btnSaveCustomer" layoutX="247.0" layoutY="30.0" mnemonicParsing="false" style="-fx-background-color: blue;" text="Save Customer" />
      <Button fx:id="btnNewCustomer" layoutX="14.0" layoutY="1.0" mnemonicParsing="false" style="-fx-background-color: green;" text="New Customer" />
      <Button fx:id="btnDeleteCustomer" layoutX="247.0" layoutY="70.0" mnemonicParsing="false" style="-fx-background-color: red;" text="Delete Customer" />
   </children>
</AnchorPane>
